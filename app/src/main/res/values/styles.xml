<resources>

    <style name="ERPAStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:padding">0dp</item>
        <!--Base Color-->
        <item name="android:colorPrimary">@color/primaryColor</item>
        <item name="android:colorPrimaryDark">@color/primaryColor</item>
        <item name="android:colorBackground">@color/secondaryColor</item>
        <!--Text Style-->
        <item name="android:colorAccent">@color/primaryColor</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorPrimary">@color/textColor</item>
        <item name="android:baselineAligned">true</item>
        <item name="android:textSize">23sp</item>
        <!--Button Style-->
        <item name="android:colorButtonNormal">@color/primaryColor</item>
        <item name="android:colorControlHighlight">@color/primaryDarkColor</item>
        <!--form Police-->
        <!--<item name="android:fontFamily">@font/morrisroman_black</item>-->
    </style>

    <style name="ERPAStyle.smallprint" parent="ERPAStyle">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ERPAStyle.title" parent="ERPAStyle">
        <item name="android:textSize">40sp</item>
    </style>

    <style name="ToolBarTitleStyle" parent="ERPAStyle">
        <item name="android:textSize">40sp</item>
        <item name="android:fontFamily">@font/nanumbrushscript_regular</item>
    </style>

    <style name="CardViewStyle" parent="ERPAStyle">
        <item name="android:fontFamily">@font/italianno_regular</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="CardViewStyle.title">
        <item name="android:textSize">35sp</item>
    </style>

    <style name="CardViewStyle.players">
        <item name="android:fontFamily">@font/morrisroman_black</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="CardViewStyle.difficculty">
        <item name="android:fontFamily">@font/yatraone_regular</item>
        <item name="android:textSize">23sp</item>
    </style>

    <style name="MyAccountButtonsStyle" parent="ERPAStyle">
        <item name="android:textSize">35sp</item>
    </style>

    <style name="ERPAStyle.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="ERPAStyle.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
